<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_app">


    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="390dp"
        android:layout_height="210dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@color/green_app"
        app:srcCompat="@drawable/categoria2" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="417dp"
        android:layout_height="224dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="252dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@color/green_app"
        app:srcCompat="@drawable/categoria1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="174dp"
        android:layout_height="56dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="12dp"
        android:background="@color/backgrounfText"
        android:text="@string/Aerobics"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="253dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="508dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@color/green_app"
        app:srcCompat="@drawable/categoria3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="191dp"
        android:layout_height="63dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="12dp"
        android:background="@color/backgrounfText"
        android:backgroundTint="#050000"
        android:text="@string/Resistance"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="58dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:background="@color/backgrounfText"
        android:backgroundTint="#050000"
        android:text="@string/Strength"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>