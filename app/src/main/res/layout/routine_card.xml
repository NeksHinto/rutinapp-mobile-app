<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="routineData"
            type="ar.edu.itba.rutinapp_mobile_app.api.model.RoutineModel" />

        <variable
            name="clickListener"
            type="ar.edu.itba.rutinapp_mobile_app.fragment.RoutineClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:onClick="@{clickListener::onClick}">


            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="406dp"
                android:layout_height="126dp"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/routineTitle"
                android:layout_width="202dp"
                android:layout_height="23dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="16dp"
                android:text="@{routineData.name}"
                android:background="@color/backgrounfText"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
<!--
            <ImageView
                android:id="@+id/routineFav"
                android:layout_width="37dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_favourite"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="82dp" />
-->
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>